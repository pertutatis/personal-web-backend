{
  "name": "personal-web-backend",
  "version": "1.0.0",
  "description": "Personal web backend with DDD and Clean Architecture",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx",
    "pretest": "node scripts/test-init.js",
    "test": "npm run test:unit",
    "test:watch": "jest -c jest.unit.config.js --watch",
    "test:coverage": "jest -c jest.unit.config.js --coverage",
    "test:unit": "jest -c jest.unit.config.js --runInBand --verbose",
    "test:integration": "jest -c jest.integration.config.js --runInBand --verbose",
    "test:e2e": "npm run test:e2e:setup",
    "test:e2e:setup": "./scripts/setup-test-env.sh && npm run test:e2e:run",
    "test:e2e:run": "start-server-and-test 'next start' http://localhost:3000/api/blog/articles 'playwright test'",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:fresh": "./scripts/run-tests.sh",
    "test:init": "node scripts/test-init.js",
    "test:verify": "ts-node scripts/verify-test-env.ts",
    "test:ci": "npm run test:init && npm run test:unit && npm run test:integration && npm run test:e2e:fresh",
    "test:full": "npm run lint && npm run test:ci",
    "test:clean": "node scripts/test-teardown.js",
    "test:all": "npm run test:init && npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:clean",
    "test:server": "next start --port 3000"
  },
  "dependencies": {
    "next": "14.1.0",
    "next-swagger-doc": "^0.4.1",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "swagger-ui-react": "^5.20.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/pg": "^8.11.0",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@types/swagger-ui-react": "^5.18.0",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.56.0",
    "eslint-config-codely": "^4.5.0",
    "eslint-config-next": "14.1.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "start-server-and-test": "^2.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
